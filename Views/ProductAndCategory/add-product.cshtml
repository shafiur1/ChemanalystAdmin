
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div >

	
@model ChemAnalyst.Models.SA_ProductViewModel
<div class="update-profile-wrapper">

<h3><a  href="@Url.Action("ProductAndCategory","Product")" class="btn btn-info"><i class="fa fa-list"></i> Product List</a></h3>

<div class="white-wrapper">

<div class="col-md-6 col-lg-7 col-md-offset-2">

<div class="eq-form">


<div class="change">
<img src="~/images/change-img.jpg" alt=""/>
<p>Add New Product</p>	
</div>

<div class="eq-form-box">
    @using (Html.BeginForm("SaveProduct", "ProductAndCategory", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model=>model.ExistingProduct)
        @Html.AntiForgeryToken()
        <div style="visibility:hidden">
            @Html.TextBoxFor(model => model.id, new { @class = "form-control", @placeholder = "Title * ", required = "required" })
        </div>
        <div class="col-md-4 col-lg-12 form-group">
            @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", @placeholder = "Title * ", required = "required" })
            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })

            @*<input type="text" value="" size="40" class="form-control" placeholder="Title">*@
        </div>
        <div class="col-sm-4 col-lg-12 form-group">

            @Html.DropDownListFor(m => m.Category, Model.CategoryList, "Select Category", new { @class = "form-control", required = "required" })


        </div>
        <div class="col-md-4 col-lg-12 form-group">
            @*<textarea rows="10" class="form-control" placeholder="Description"></textarea>*@
            @Html.TextBoxFor(model => model.ProductDiscription, new { @class = "form-control", @rows = 4, @placeholder = "Meta Keyword" })


        </div>





        <div class="col-md-4 col-lg-12 form-group">
            @*<textarea rows="4" class="form-control" placeholder="Meta Title"></textarea>*@
            @Html.TextBoxFor(model => model.Meta, new { @class = "form-control", @placeholder = "Meta Title"})


        </div>

        <div class="col-md-4 col-lg-12 form-group">
            @*<textarea rows="4" class="form-control" placeholder="Meta Description"></textarea>*@
            @Html.TextAreaFor(model => model.MetaDiscription, new { @class = "form-control", @rows = 4, @placeholder = "Meta Description"})


        </div>





        <div class="col-sm-6 col-lg-12" style="display:none">
            <div class="form-group">
                <input type="file" name="file" class="form-control" />


            </div>
        </div>

        <div class="btn-wrapper">

            <a class="gray-btn" href="@Url.Action("Product","ProductAndCategory")">Cancel</a>
            <input type="submit" class="blue-btn" value="Save">

        </div>
    }

</div>


</div>

</div>
</div>	

</div>	
			
	
	
</div>



<script>
	
$(document).on('click', '.browse', function(){
  var file = $(this).parent().parent().parent().find('.file');
  file.trigger('click');
});
$(document).on('change', '.file', function(){
  $(this).parent().find('.form-control').val($(this).val().replace(/C:\\fakepath\\/i, ''));
});	
	
	
	</script>

