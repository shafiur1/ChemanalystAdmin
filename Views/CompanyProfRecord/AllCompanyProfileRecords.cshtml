@model IEnumerable<ChemAnalyst.Models.CompanyProfRecordNew>
@{
    ViewBag.Title = "AllCompanyProfileRecords";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<style>
    .btns {
        float: right;
        margin-left: 5px;
        margin-bottom: 5px;
    }
</style>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

        $(document).ready(function () {
            $('#example').DataTable();
        });


</script>
    <div class="update-profile-wrapper">

        <div class="white-wrapper" style="padding-top:10px">

            <div class="data-detail-wrapper table-responsive">
                <div class="col-md-12">
                    
                    <a class="btn btn-success btns" href="@Url.Action("Index", "CompanyProfRecord")">
                        <i class="fa fa-plus"></i> Upload Company FY Data
                    </a>
                    
                </div>
               
                <table class="table table-bordered" id="example">
                    <thead>
                        <tr>
                            <th class="bg-info">@Html.DisplayNameFor(c => c.year)</th>
                            <th class="bg-info">@Html.DisplayNameFor(c => c.SA_Company.Name)</th>
                            <th class="bg-info">Revenue</th>
                            <th class="bg-info">@Html.DisplayNameFor(c => c.Growth)</th>
                            @if (ChemAnalyst.Common.Helpers.Global.AdminRole == Convert.ToString(Session["UserRole"]))
                            {
                                <th>Action</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.year</td>
                            <td>@item.SA_Company.Name</td>
                            <td>@item.Revenue</td>
                            <td>@item.Growth</td>
                            @if (ChemAnalyst.Common.Helpers.Global.AdminRole == Convert.ToString(Session["UserRole"]))
                            {
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", "CompanyProfRecord", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })*@
                                    @Html.ActionLink("Delete", "Delete", "CompanyProfRecord", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            }
                        </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>

    </div>

