
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<script src="..\ckeditor/ckeditor.js" type="text/javascript"></script>*@
    <script src="~\ckeditor/ckeditor.js" type="text/javascript"></script>
@model ChemAnalyst.Models.SA_AdvisoryContent
<div class="update-profile-wrapper">

    <h3><a href="@Url.Action( "AdvsoryContent","AdvisorySolution" )"><i class="fa fa-list"></i>Advsory Content</a></h3>

    <div class="white-wrapper">

        <div class="col-md-6 col-lg-7 col-md-offset-2">

            <div class="eq-form">
                <div class="change">
                    <img src="~/images/change-img.jpg" alt="" />
                    <p>Add New Advsory Content</p>
                </div>

                <div class="eq-form-box">
                    @using (Html.BeginForm("SaveAdvisoryContent", "AdvisorySolutions", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m=>m.CreatedTime)
                        <div style="visibility:hidden">
                            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @placeholder = "Title * ", required = "required" })
                        </div>
                      

                        <div class="col-sm-4 col-lg-12 form-group">

                            @Html.DropDownListFor(m => m.AdsId, ChemAnalyst.DAL.ProductDataStore.GetAdvisory(), "Select Advisory", new { @class = "form-control", required = "required" })

                        </div>

                        <div class="col-md-4 col-lg-12 form-group">
                            <label>ADVISORY 1</label>
                            @Html.TextAreaFor(model => model.ADVISORY1, new { @class = "form-control", @rows = 200, @placeholder = "ADVISORY 1 * ", id = "ADVISORY1" })
                        </div>

                        <div class="col-md-4 col-lg-12 form-group">
                            <label>ADVISORY 2</label>
                            @Html.TextAreaFor(model => model.ADVISORY2, new { @class = "form-control", @rows = 200, @placeholder = "ADVISORY 1 * ", id = "ADVISORY2"})
                        </div>
                        <div class="col-md-4 col-lg-12 form-group">
                            <label>ADVISORY 3</label>
                            @Html.TextAreaFor(model => model.ADVISORY3, new { @class = "form-control", @rows = 200, @placeholder = "ADVISORY 1 * ", id = "ADVISORY3"})
                        </div>
                        <div class="col-md-4 col-lg-12 form-group">
                            <label>ADVISORY 4</label>
                            @Html.TextAreaFor(model => model.ADVISORY4, new { @class = "form-control", @rows = 200, @placeholder = "ADVISORY 1 * ", id = "ADVISORY4"})
                        </div>
                        <div class="col-md-4 col-lg-12 form-group">
                            <label>ADVISORY 5</label>
                            @Html.TextAreaFor(model => model.ADVISORY5, new { @class = "form-control", @rows = 200, @placeholder = "ADVISORY 1 * ", id = "ADVISORY5" })
                        </div>
                        <div class="col-md-4 col-lg-12 form-group">
                            <label>ADVISORY 6</label>
                            @Html.TextAreaFor(model => model.ADVISORY6, new { @class = "form-control", @rows = 200, @placeholder = "ADVISORY 1 * ", id = "ADVISORY6" })
                        </div>
                     
                        <script>

                            CKEDITOR.replace("ADVISORY1");

                        </script>
                        <script>

                            CKEDITOR.replace("ADVISORY2");

                        </script>
                        <script>

                            CKEDITOR.replace("ADVISORY3");

                        </script>
                        <script>

                            CKEDITOR.replace("ADVISORY4");

                        </script>

                        <script>

                            CKEDITOR.replace("ADVISORY5");

                        </script>
                        <script>

                            CKEDITOR.replace("ADVISORY6");

                        </script>
                       

                        <div class="btn-wrapper">

                            <input type="submit" class="btn btn-primary" value="Save">

                        </div>

                    }

                </div>


            </div>

        </div>
    </div>

</div>



<script type="text/javascript">
    $(function () {
        $('#ADVISORY1').ckeditor({
            toolbar: 'Full',
            enterMode: CKEDITOR.ENTER_BR,
            shiftEnterMode: CKEDITOR.ENTER_P
        });

        $('#ADVISORY2').ckeditor({
            toolbar: 'Full',
            enterMode: CKEDITOR.ENTER_BR,
            shiftEnterMode: CKEDITOR.ENTER_P
        });

        $('#ADVISORY3').ckeditor({
            toolbar: 'Full',
            enterMode: CKEDITOR.ENTER_BR,
            shiftEnterMode: CKEDITOR.ENTER_P
        });

        $('#ADVISORY4').ckeditor({
            toolbar: 'Full',
