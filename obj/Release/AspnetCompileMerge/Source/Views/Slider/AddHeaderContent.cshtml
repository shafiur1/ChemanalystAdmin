
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<script src="..\ckeditor/ckeditor.js" type="text/javascript"></script>*@
    <script src="~\ckeditor/ckeditor.js" type="text/javascript"></script>
@model ChemAnalyst.Models.SA_HomeHeader
<div class="update-profile-wrapper">

    <h3><a href="@Url.Action( "HeaderContent","Slider" )"><i class="fa fa-list"></i>Header Content</a></h3>

    <div class="white-wrapper">

        <div class="col-md-6 col-lg-7 col-md-offset-2">

            <div class="eq-form">
                <div class="change">
                    <img src="~/images/change-img.jpg" alt="" />
                    <p>Add New Advsory Content</p>
                </div>

                <div class="eq-form-box">
                    @using (Html.BeginForm("SaveHeaderContent", "Slider", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m=>m.CreatedTime)
                        <div style="visibility:hidden">
                            @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @placeholder = "Title * ", required = "required" })
                        </div>
                      

                        <div class="col-md-4 col-lg-12 form-group">
                            <label style="font-weight:normal">Phone Number</label>
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control",  @placeholder = "Phone Number * ", id = "PhoneNumber", required = "required" })
                        </div>

                        <div class="col-md-4 col-lg-12 form-group">
                            <label style="font-weight:normal">Email Address</label>
                            @Html.TextAreaFor(model => model.EmailAddress, new { @class = "form-control", @placeholder = "Email Address * ", id = "EmailAddress" })
                        </div>
                        <div class="col-md-4 col-lg-12 form-group">
                            <label style="font-weight:normal">Office Address</label>
                            @Html.TextAreaFor(model => model.OfficeAddress, new { @class = "form-control", @placeholder = "Office Address * ", id = "OfficeAddress" })
                        </div>
                                           
                       

                        <div class="btn-wrapper">

                            <input type="submit" class="btn btn-primary" value="Save">

                        </div>

                    }

                </div>


            </div>

        </div>
    </div>

</div>



