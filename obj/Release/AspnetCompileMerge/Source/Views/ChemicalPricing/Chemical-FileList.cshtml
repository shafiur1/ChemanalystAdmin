<div class="update-profile-wrapper">

    <h3><a href="@Url.Action("Index", "ChemicalPricing")" class="btn btn-success"><i class="fa fa-plus"></i> Chemical Pricing Import</a></h3>


    <div class="white-wrapper">

        <div class="data-detail-wrapper table-responsive">
            <br/>
            <table id="FileList" class="table table-striped">
                <thead>
                    <tr>
                        <th class="bg-info">File Name</th>
                        <th class="bg-info">Product Name</th>
                        <th class="bg-info">Created By</th>
                        <th class="bg-info" width="130">Created</th>
                        @if (ChemAnalyst.Common.Helpers.Global.AdminRole == Convert.ToString(Session["UserRole"]))
                        {
                            <th>Action</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td><a href="~/ChemPricingImportfile/@item.FileName">@item.FileName</a>  </td>
                        <td>@item.Product</td>
                        <td>@item.CreatedBy </td>
                        <td>@item.CreatedDate</td>
                        @if (ChemAnalyst.Common.Helpers.Global.AdminRole == Convert.ToString(Session["UserRole"]))
                        {
                            <td><a href="../ChemicalPricing/DeleteChemicalPricing?fileName=@(item.FileName != null ? item.FileName.Replace(".","___") : "")"><i class="fa fa-trash-o fa-lg"></i></a></td>
                        }
                    </tr>
                    }
                </tbody>
            </table>





        </div>

