@model ChemAnalyst.ViewModel.CompanyProfRecordViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="update-profile-wrapper">

    <div class="white-wrapper" style="padding-top:10px">

        <div class="data-detail-wrapper table-responsive">


            @using (Html.BeginForm("SaveCompanyProfile", "CompanyProfRecord", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.DisplayNameFor(c => c.FinancialYearId)
                    @Html.DropDownListFor(c => c.FinancialYearId, new SelectList(Model.FinancialYear, "Id", "FinYear"), "Select....", new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.FinancialYearId)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(c => c.SA_CompanyId)
                    @Html.DropDownListFor(c => c.SA_CompanyId, new SelectList(Model.SA_Company, "id", "Name"), "Select....", new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.SA_CompanyId)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(c => c.Revenues)
                    @Html.TextAreaFor(c => c.Revenues, 8, 8, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Revenues)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(c => c.Growth)
                    @Html.TextAreaFor(c => c.Growth, 8, 8, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Growth)
                </div>
                @Html.HiddenFor(c => c.Id)
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">Save</button>
            }

        </div>

    </div>

</div>

