
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@model ChemAnalyst.Models.SA_CustomerViewModel
@using ChemAnalyst.Models






<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">

                            <a class="text-center" href="index.html"> <h2>Update Profile</h2></a>

                            <form class="mt-5 mb-5 login-input">
                               
                                <div class="form-group">
                                    @using (Html.BeginForm("CustSaveProfile", "Login", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.HiddenFor(m => m.UserPassword)
                                        @Html.HiddenFor(m => m.ProfileImage)
                                        @Html.HiddenFor(m => m.Email)
                                        @Html.AntiForgeryToken()
                                        <div style="visibility:hidden">
                                            @Html.TextBoxFor(model => model.id, new { @class = "form-control", @placeholder = "Title * ", required = "required" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Fname, new { @class = "form-control", @placeholder = "First Name * ", required = "required" })


                                            @*<input type="text" name="FirstName"  size="40" class="form-control" placeholder="First Name">*@
                                        </div>

                                        <div class="form-group">

                                            @*<input type="text" name="LastName" size="40" class="form-control" placeholder="Last Name">*@
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Last Name * ", @readonly = "readonly" })


                                        </div>

                                        <div class="form-group" style="display:none">

                                            @*<input type="email" name="Email" size="40" class="form-control" placeholder="Email">*@
                                            @*@Html.HiddenFor(m => m.Email)*@

                                        </div>


                                        <div class="form-group">

                                            @*<input type="text" name="Phone" size="40" class="form-control" placeholder="Phone">*@
                                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Phone * ", required = "required", type = "number" })


                                        </div>
                                        if (Model.id == 0)
                                        {
                                            <div class="form-group">

                                                @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control", @placeholder = "Password * ", required = "required" })


                                            </div>

                                            <div class="form-group">

                                                <input type="password" name="confirm Password" size="40" class="form-control" placeholder="confirm Password" required>


                                            </div>

                                        }

                                        <div class="form-group" style="display:none">

                                            @Html.DropDownListFor(model => model.Gender,
                                    new SelectList(Enum.GetValues(typeof(Gender))),
                                    "Select Gender", new { @class = "form-control" })

                                            @*<select class="form-control" name="Username">
                    <option value="volvo">Gender</option>
                    <option value="1">Male</option>
                    <option value="2">Female</option>

                </select>*@


                                        </div>

                                        <div class="form-group">

                                            @Html.HiddenFor(m => m.Role)



                                            @*@Html.DropDownListFor(m => m.Role,
                new SelectList(Enum.GetValues(typeof(UserRole))),
                "Select Rile", new { @class = "form-control" })*@


                                            @*<select class="form-control" name="Username">
                    <option value="">Role</option>
                    <option value="1">Admin</option>
                    <option value="2">Sales</option>
                    <option value="3">Customer</option>

                </select>*@

                                        </div>

                                        <div class="form-group" style="display:none">
                                            <input type="file" name="file" class="form-control" />

                                        </div>




                                    }
                                </div>
                                <button class="btn login-form__btn submit w-100" value="Save">Update</button>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>








