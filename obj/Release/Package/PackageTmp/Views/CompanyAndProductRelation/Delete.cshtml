@model  ChemAnalyst.Models.CompanyAndProductRelation
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="update-profile-wrapper">

        <div class="white-wrapper" style="padding-top:10px">

            <div class="data-detail-wrapper table-responsive">

                @using (Html.BeginForm("ConfirmDelete", "CompanyAndProductRelation", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.DisplayNameFor(d => d.SA_Company.Name):
                        @Html.DisplayFor(d => d.SA_Company.Name)
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(d => d.SA_Product.ProductName):
                        @Html.DisplayFor(d => d.SA_Product.ProductName)
                    </div>
                    @Html.HiddenFor(d => d.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                }


            </div>

        </div>

    </div>
