@model ChemAnalyst.ViewModel.ProductListViewModel
@{
    ViewBag.Title = "Free Trail";
    Layout = "~/Views/Shared/_LayoutUser4.cshtml";
}

<div class="inner-banner">
    <img src="/images/about-banner.jpg">
    <h1>Browse 400+ Chemicals</h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Browse 400+ Chemicals</li>
    </ol>

</div>


<div class="page-content">
    <div class="static-page">
        <div class="container">

            <div class="row">

                <div class="col-md-9">
                    <div class="searchbox">
                        @using (Html.BeginForm("ProductList", "ChemAnalyst", null, FormMethod.Post, new { @class="row" , enctype = "multipart/form-data" }))
                        {
                            <div class="col-md-5">

                                @Html.TextBoxFor(model => model.search, new { @class = "plbxt btn btn-primary width100", @placeholder = "search * " })
                            </div>
                            <div class="col-md-5 pl-0">
                                @*@Html.DropDownList(Model.id, new SelectList(ViewBag.category), "Please select category", new { @id = "category", @class = "btn btn-primary width100" })*@
                                @Html.DropDownListFor(m => m.id, (IEnumerable<SelectListItem>)ViewBag.category, "Please select category", new { @id = "category", @class = "btn btn-primary width100" })
                            </div>
                            <div class="col-md-2 pl-0">
                                <button type="submit" class="btn btn-green">
                                    <i class="fa fa-filter"></i>
                                    Filter
                                </button>
                            </div>
                        }
                    </div>
                    <div style="height: 30px"></div>
                    @if (ViewBag.CategoryName != null)
                    {
                        <div class="browse-cat"><a>Filtered By : @ViewBag.CategoryName</a></div>
                    } else
                    {
                        <div class="browse-cat"><a><i class="fa fa-link"></i> Product List</a></div>
                    }


                    <ul class="browse-chemicals row">
                        @if (Model.ProductList.Any())
                        {
                            foreach (var item3 in Model.ProductList)
                            {
                                <li class="col-md-3"><a> @item3.ProductName </a></li>
                            }
                        }
                        else
                        {
                            <li class="col-md-3"><p> No Data Available </p></li>
                        }



                    </ul>


                </div>

                <div class="col-md-3">

                    <aside>


                        <div class="side-news-feed">

                            <h3><i class="fa fa-bell-o"></i> News</h3>
                            @foreach (var item2 in Model.NewsList)
                            {
                                <div class="news-feed-col">
                                    <a href="@Url.Action("NewsDetails", "NewsAndDeals", new { id = item2.GenerateItemNameAsParam() })">
                                        @if (item2.NewsImg != string.Empty)
                                        {
                                            <div class="left-news-pic"><img src="~/ProductImages/@item2.NewsImg" alt=""></div>
                                            <div class="right-news-desc">
                                                <p>@(item2.NewsDiscription.Length > 50 ? (item2.NewsDiscription.Substring(0, 50)) : item2.NewsDiscription)...</p>
                                                <p><i class="fa fa-clock-o"></i>@item2.CreatedTime.ToShortDateString()</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="right-newsdesc">
                                                <p>@(item2.NewsDiscription.Length > 50 ? (item2.NewsDiscription.Substring(0, 50)) : item2.NewsDiscription)...</p>
                                                <p><i class="fa fa-clock-o"></i>@item2.CreatedTime.ToShortDateString()</p>
                                            </div>
                                        }
                                    </a>
                                </div>
                            }


                        </div>

                        <div class="side-news-feed mt-4">

                            <h3><i class="fa fa-thumbs-up"></i> Top Deals</h3>
                            @foreach (var item in Model.DealsList)
                            {
                                <div class="news-feed-col">
                                    <a href="@Url.Action("DealsDetails", "NewsAndDeals", new { id = item.GenerateItemNameAsParam() })">
                                        @if (item.DealsImg != string.Empty)
                                        {
                                            <div class="left-news-pic"><img src="~/ProductImages/@item.DealsImg" alt=""></div>
                                            <div class="right-news-desc">
                                                <p>@(item.DealsDiscription.Length > 50 ? (item.DealsDiscription.Substring(0, 50)) : item.DealsDiscription)...</p>
                                                <p><i class="fa fa-clock-o"></i>@item.CreatedTime.Value.ToShortDateString()</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="right-newsdesc">
                                                <p>@(item.DealsDiscription.Length > 50 ? (item.DealsDiscription.Substring(0, 50)) : item.DealsDiscription)...</p>
                                                <p><i class="fa fa-clock-o"></i>@item.CreatedTime.Value.ToShortDateString()</p>
                                            </div>
                                        }

                                    </a>
                                </div>
                            }

                        </div>

                    </aside>

                </div>

            </div>


        </div>
    </div>
</div>




